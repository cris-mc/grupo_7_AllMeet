<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <main>
    <div id="contenedor">
        <div id="registro"><h1>Carga de productos</h1></div>
            <div id="form">
                <form action="/products/charge" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="nombre" placeholder="Nombre del Producto" required>
                    </div>
                    <div class="form-group">
                        <!--input type="text" name="Descripcion" value="Descripcion breve del producto" required-->
                        <textarea name="descripcion" rows="10" cols="50" placeholder="Descripcion del producto"></textarea>
                    </div>
                    <div class="form-group">
                        <div class="edicion">
                            <input type="text" name="precio" placeholder="Precio" >
                        </div>
                        <div class="form-group">
                            <input type="text" name="descuento" placeholder="Descuento">
                        </div>
                    </div>
                    <div class="form-group">
                        <h3 class="cat">*Categoria</h3>
                        <div class="eleccion">
                            <select name="categoria">
                                <option>Comida</option>
                                <option>Bebida</option>
                                <option>Otros</option>
                            </select> 
                        </div>
                    </div>
                    <div class="form-group">
                        <h3 class="cat">Cargar imagen</h3>
                        <i class="fas fa-camera"></i>
                        <input type="file" name="imagen" accept=".jpg, .png" id="imagen">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Enviar">
                    </div>
                    <div class="form-group">
                        <input type="reset" value="Borrar">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include('../partials/footer') %>
</body>
</html>

  
    
